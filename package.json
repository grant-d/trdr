{
  "name": "trdr",
  "version": "1.0.0",
  "description": "Trading system",
  "type": "module",
  "main": "dist/index.js",
  "private": false,
  "bin": {
    "trdr": "dist/cli/cli.js"
  },
  "scripts": {
    "up": "git gc && yarn global upgrade && yarn && yarn outdated",
    "build": "rimraf dist && tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--unhandled-rejections=strict --experimental-detect-module' tsx --test --test-timeout=30000 'tests/**/*.test.ts'",
    "test:watch": "tsx --test --watch --test-timeout=10000 'src/**/*.test.ts' 'tests/**/*.test.ts'",
    "test:unit": "NODE_OPTIONS='--unhandled-rejections=strict --experimental-detect-module' tsx --test --test-force-exit 'tests/unit/**/*.test.ts'",
    "test:integration": "tsx --test --test-timeout=15000 'tests/integration/**/*.test.ts'",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "tc": "     tsc --noEmit",
    "tc:tests": "tsc --project tsconfig.tests.json",
    "tc:all": "  yarn tc && yarn tc:tests",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "clean": "rimraf dist node_modules coverage",
    "cli": "tsx src/cli/cli.ts",
    "cli:build": "npm run build && node dist/cli/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@types/node": "^24.0.8",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.30.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "task-master-ai": "^0.19.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.1.3",
    "@coinbase-sample/advanced-trade-sdk-ts": "^0.2.0",
    "@coinbase-sample/core-ts": "^0.2.0",
    "@types/ws": "^8.18.1",
    "commander": "^14.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.25.75"
  }
}
