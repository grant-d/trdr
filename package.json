{
  "name": "trdr",
  "version": "1.0.0",
  "description": "Trading system",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "tsx --test 'src/**/*.test.ts' 'tests/**/*.test.ts'",
    "test:watch": "tsx --test --watch 'src/**/*.test.ts' 'tests/**/*.test.ts'",
    "test:unit": "tsx --test 'tests/unit/**/*.test.ts'",
    "test:integration": "tsx --test 'tests/integration/**/*.test.ts'",
    "lint": "eslint 'src/**/*.ts' 'scripts/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'scripts/**/*.ts' 'tests/**/*.ts' --fix",
    "tc": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts' 'scripts/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'scripts/**/*.ts' 'tests/**/*.ts'",
    "clean": "rimraf dist node_modules coverage",
    "csv-to-parquet": "tsx scripts/csv-to-parquet.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@types/node": "^24.0.8",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.30.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "task-master-ai": "^0.18.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@coinbase-sample/core-ts": "^0.2.0",
    "hyparquet": "^1.17.1",
    "hyparquet-writer": "^0.6.0",
    "winston": "^3.17.0"
  }
}
