{
  "name": "@trdr/cli",
  "version": "1.0.0",
  "private": true,
  "description": "Command-line interface for TRDR trading system",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "trdr": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist *.tsbuildinfo",
    "lint": "eslint src --ext .ts",
    "test": "tsx --test src/**/*.test.ts",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "demo": "tsx src/run-demo.ts",
    "demo:btc": "tsx src/run-demo.ts /Users/grantdickinson/repos/trdr/csv/btc-usd.csv",
    "demo:quick": "tsx src/run-demo.ts /Users/grantdickinson/repos/trdr/csv/btc-usd.csv --duration 3000",
    "demo:verbose": "tsx src/run-demo.ts /Users/grantdickinson/repos/trdr/csv/btc-usd.csv --duration 10000 --verbose",
    "demo:liquidate": "tsx src/run-demo.ts /Users/grantdickinson/repos/trdr/csv/btc-usd.csv --duration 3000 --liquidate",
    "download-data": "tsx src/utils/download-data.ts",
    "demo:aapl": "tsx src/run-demo.ts csv/aapl-sample.csv --duration 3000 --liquidate",
    "demo:sol": "tsx src/run-demo.ts csv/solana-sample.csv --duration 3000 --liquidate",
    "demo:eth": "tsx src/run-demo.ts csv/btc-usd.csv --symbol ETH-USD --duration 3000 --liquidate",
    "download-aapl": "tsx src/utils/download-data.ts AAPL --timeframe 2y --output csv/aapl-2y.csv",
    "download-sol": "tsx src/utils/download-data.ts SOL --timeframe 2y --output csv/solana-2y.csv"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@trdr/core": "1.0.0",
    "@trdr/data": "1.0.0",
    "@trdr/shared": "1.0.0",
    "@trdr/types": "1.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "csv-parse": "^5.5.0",
    "ora": "^8.0.1",
    "table": "^6.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0"
  }
}
